@model List<project001.Models.Domain.Employee>


@{
}
<h1>Employees</h1>
<table class="table">
    <thead>
        <tr>
            <td>Id</td>
            <td>Name</td>
            <td>Email</td>
            <td>Salary</td>
            <td>Date Of Birth</td>
            <td>Department</td>
            <td> </td>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model)
        {
            <tr>
                <td>@employee.Id</td>
                <td>@employee.Name</td>
                <td>@employee.Email</td>
                <td>@employee.Salary</td>
                <td>@employee.DateOfBirth.ToString("dd-mm-yyyy")</td>
                <td>@employee.Department</td>       
                <td><a class="btn btn-primary" href="Employees/View/@employee.Id" role="button">View</a></td>
            </tr>
        }
    </tbody>
</table>


